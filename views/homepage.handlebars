<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2 id = "blog-Post">
      <a href='/post/{{post.id}}'>{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.user_name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
  </div>
</div>
{{/each}}

<script src="/js/homepage.js"></script>
